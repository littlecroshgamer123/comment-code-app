import { useState } from "react";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Card, CardContent } from "@/components/ui/card";
import { ImagePlus } from "lucide-react";

export default function CommentPostApp() {
  const [posts, setPosts] = useState([]);
  const [text, setText] = useState("");
  const [image, setImage] = useState(null);

  const handlePost = () => {
    if (text.trim() === "") return;
    const newPost = {
      id: Date.now(),
      text,
      image: image ? URL.createObjectURL(image) : null,
    };
    setPosts([newPost, ...posts]);
    setText("");
    setImage(null);
  };

  return (
    <div className="max-w-2xl mx-auto mt-10 p-4 space-y-6">
      <h1 className="text-2xl font-bold text-center">Comment & Image Post App</h1>
      <Card>
        <CardContent className="space-y-4 pt-4">
          <Textarea
            placeholder="Write your comment here..."
            value={text}
            onChange={(e) => setText(e.target.value)}
          />
          <div className="flex items-center gap-4">
            <label className="flex items-center gap-2 cursor-pointer">
              <ImagePlus className="w-5 h-5" />
              <span>Add Image</span>
              <Input
                type="file"
                accept="image/*"
                className="hidden"
                onChange={(e) => setImage(e.target.files[0])}
              />
            </label>
            {image && <span className="text-sm text-gray-600">{image.name}</span>}
            <Button onClick={handlePost}>Post</Button>
          </div>
        </CardContent>
      </Card>

      <div className="space-y-4">
        {posts.map((post) => (
          <Card key={post.id}>
            <CardContent className="pt-4 space-y-2">
              <p>{post.text}</p>
              {post.image && (
                <img
                  src={post.image}
                  alt="uploaded"
                  className="max-h-60 rounded-lg"
                />
              )}
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  );
}

/*
WHERE TO HOST THIS APPLICATION:
1. **Vercel** (https://vercel.com) - Best for Next.js and React apps. Free tier available.
2. **Netlify** (https://netlify.com) - Easy setup for static frontends. Good CI/CD support.
3. **GitHub Pages** (https://pages.github.com) - Free for static websites, requires build output as HTML/CSS/JS.
4. **Render** (https://render.com) - Simple deployment for both frontend and backend.
5. **Firebase Hosting** (https://firebase.google.com/products/hosting) - Great for scalable hosting with Google support.

To deploy:
- Push this project to GitHub.
- Connect your GitHub repo to Vercel/Netlify.
- Follow their deploy instructions.
*/
